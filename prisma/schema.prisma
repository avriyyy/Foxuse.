generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Airdrop {
  id          String   @id @default(uuid())
  name        String
  description String
  category    String
  difficulty  String
  potential   String
  tasks       Json     @default("[]")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  userAirdrops UserAirdrop[]

  @@map("airdrops")
}

model UserAirdrop {
  id        String   @id @default(uuid())
  wallet    String
  airdropId String   @map("airdrop_id")
  airdrop   Airdrop  @relation(fields: [airdropId], references: [id], onDelete: Cascade)
  completedTasks Json     @default("[]") // Array of task IDs
  createdAt DateTime @default(now()) @map("created_at")

  @@unique([wallet, airdropId])
  @@map("user_airdrops")
}

enum Role {
  USER
  ADMIN
  DEVELOPER
}

model User {
  id        String   @id @default(uuid())
  wallet    String   @unique
  role      Role     @default(USER)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}
